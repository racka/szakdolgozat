<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src="AddAppointment.css"/>

    <g:AbsolutePanel styleName="{style.mainFrame}">
        <g:VerticalPanel ui:field="verticalPanel">

            <g:Label ui:field="modalLabel" styleName="{style.header}"/>

            <g:HorizontalPanel>
                <g:Label styleName="{style.caption}">Fejléc:</g:Label>
                <g:TextBox ui:field="title"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label styleName="{style.caption}">Leírás:</g:Label>
                <g:TextBox ui:field="description"/>
            </g:HorizontalPanel>

            <g:Button ui:field="addButton">Hozzáadás</g:Button>

        </g:VerticalPanel>
    </g:AbsolutePanel>

</ui:UiBinder>